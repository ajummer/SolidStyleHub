{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 10
    },
    "firstImg": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "secondImg": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "isNew": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
